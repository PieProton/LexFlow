{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LexFlow",
  "version": "2.6.0",
  "identifier": "com.pietrolongo.lexflow",
  "build": {
    "frontendDist": "../client/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd client && npm run dev",
    "beforeBuildCommand": "cd client && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "LexFlow",
        "width": 1400,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 700,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
    "visible": true,
        "backgroundColor": "#08090f"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; connect-src ipc: http://ipc.localhost ws://localhost:5173; img-src 'self' data: blob:; style-src 'self' 'nonce-{nonce}'; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "android": {
      "minSdkVersion": 24,
      "versionCode": 240
    },
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "wix": {
        "language": "it-IT",
        "upgradeCode": "8166B188-49AA-4B0E-BAE7-31D8DA09BA84"
      }
    }
  },
  "plugins": {}
}
