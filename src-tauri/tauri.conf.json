{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LexFlow",
  "version": "3.6.0",
  "identifier": "com.pietrolongo.lexflow",
  "build": {
    "frontendDist": "../client/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd client && npm run dev",
    "beforeBuildCommand": "cd client && npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:"
    },
    "macOSPrivateApi": false,
    "windows": [
      {
        "label": "main",
        "title": "LexFlow",
        "width": 1400,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 700,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "visible": true,
        "backgroundColor": "#08090f",
        "backgroundThrottling": "disabled"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "infoPlist": "Info.plist"
    },
    "android": {
      "minSdkVersion": 24,
      "versionCode": 360
    },
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "wix": {
        "language": "it-IT",
        "upgradeCode": "8166B188-49AA-4B0E-BAE7-31D8DA09BA84"
      }
    }
  },
  "plugins": {}
}
